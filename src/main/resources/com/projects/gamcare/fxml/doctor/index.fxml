<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>

<VBox
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.projects.gamcare.controllers.doctor.Index"
    stylesheets="@../../css/main.css"
>
    <ScrollPane styleClass="bodyScrollPane" fitToWidth="true">
        <VBox>
            <VBox styleClass="headingBox" fx:id="headingBox"/>

            <VBox styleClass="bodyBox">
                <VBox styleClass="innerBodyBox">
                    <HBox styleClass="subHeadingBox">
                        <Label text="Doctors"/>
                        <HBox HBox.hgrow="ALWAYS"/>
                        <Button text="Add" onAction="#onAddDoctorButtonClick" fx:id="addDoctorButton"/>
                    </HBox>
                    <VBox styleClass="tableDisplay" fx:id="doctorsTable">
                        <HBox styleClass="tableHeadings">
                            <Label>First name</Label>
                            <HBox HBox.hgrow="ALWAYS"/>

                            <Label>Middle name</Label>
                            <HBox HBox.hgrow="ALWAYS"/>

                            <Label>Last name</Label>
                            <HBox HBox.hgrow="ALWAYS"/>

                            <Label>Age</Label>
                            <HBox HBox.hgrow="ALWAYS"/>

                            <Label styleClass="email">Email address</Label>
                            <HBox HBox.hgrow="ALWAYS"/>

                            <Label>Level</Label>
                            <HBox HBox.hgrow="ALWAYS"/>

                            <Label styleClass="action">Action</Label>
                        </HBox>
                    </VBox>
                </VBox>
            </VBox>
        </VBox>
    </ScrollPane>
</VBox>

