<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>

<VBox
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.projects.gamcare.controllers.doctor.Show"
    stylesheets="@../../css/main.css"
>
    <ScrollPane styleClass="bodyScrollPane" fitToWidth="true">
        <VBox>
            <VBox styleClass="headingBox" fx:id="headingBox"/>

            <VBox styleClass="bodyBox">
                <VBox styleClass="innerBodyBox" fx:id="innerBodyBox">
                    <HBox styleClass="subHeadingBox">
                        <Label text="Main"/>
                        <HBox HBox.hgrow="ALWAYS"/>
                        <Button text="Edit" onAction="#onEditDoctorButtonClick"/>
                    </HBox>
                    <VBox styleClass="profileAttributes" fx:id="profileAttributes">
                        <VBox.margin>
                            <Insets>
                                <bottom>30</bottom>
                            </Insets>
                        </VBox.margin>
                    </VBox>


                    <HBox styleClass="subHeadingBox">
                        <Label text="Other Details"/>
                        <HBox HBox.hgrow="ALWAYS"/>
                        <Button text="Edit" onAction="#onEditDoctorButtonClick"/>
                    </HBox>
                    <VBox styleClass="profileOtherDetails" fx:id="profileOtherDetails">
                        <VBox.margin>
                            <Insets>
                                <bottom>30</bottom>
                            </Insets>
                        </VBox.margin>
                    </VBox>


                    <HBox styleClass="subHeadingBox">
                        <Label text="Hospitals"/>
                        <HBox HBox.hgrow="ALWAYS"/>
                    </HBox>
                    <VBox styleClass="profileHospitals" fx:id="profileHospitals">
                        <VBox.margin>
                            <Insets>
                                <bottom>30</bottom>
                            </Insets>
                        </VBox.margin>
                    </VBox>
                </VBox>
            </VBox>
        </VBox>
    </ScrollPane>
</VBox>

