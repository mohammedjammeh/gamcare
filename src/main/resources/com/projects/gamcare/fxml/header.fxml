<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.projects.gamcare.controllers.Header"
>
    <VBox styleClass="headingBox">
        <HBox styleClass="innerHeadingBox">
            <HBox styleClass="mainTitleBox">
                <Label text="Gamcare - Farokono"/>
            </HBox>
            <HBox HBox.hgrow="ALWAYS"/>
            <HBox styleClass="menuBox">
                <Button fx:id="hospitalsMenuButton" text="Hospitals" onAction="#onHospitalsMenuButtonClick"/>
                <Button fx:id="doctorsMenuButton" text="Doctors" onAction="#onDoctorsMenuButtonClick"/>
                <Button fx:id="myProfileMenuButton" text="My Profile" onAction="#onMyProfileMenuButtonClick"/>
                <Button fx:id="logOutButton" text="Log Out" onAction="#onLogOutMenuButtonClick"/>
            </HBox>
        </HBox>
    </VBox>
</VBox>
