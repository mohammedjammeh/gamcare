<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>

<VBox
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.projects.gamcare.controllers.hospital.Index"
    stylesheets="@../../css/main.css"
>
    <ScrollPane styleClass="bodyScrollPane" fitToWidth="true">
        <VBox>
            <VBox styleClass="headingBox" fx:id="headingBox"/>

            <VBox styleClass="bodyBox">
                <VBox styleClass="innerBodyBox">
                    <HBox styleClass="subHeadingBox">
                        <Label text="Hospitals"/>
                        <HBox HBox.hgrow="ALWAYS"/>
                        <Button text="Add" onAction="#onAddHospitalButtonClick" fx:id="addHospitalButton"/>
                    </HBox>
                    <VBox styleClass="hospitalBodyBox" fx:id="hospitalBodyBox">
                    </VBox>
                </VBox>
            </VBox>
        </VBox>
    </ScrollPane>
</VBox>

