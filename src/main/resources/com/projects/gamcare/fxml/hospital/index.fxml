<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.FlowPane?>

<VBox
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.projects.gamcare.controllers.Hospital"
    stylesheets="@../../css/main.css"
>
    <VBox styleClass="headingBox">
        <HBox styleClass="innerHeadingBox">
            <HBox styleClass="titleBox">
                <Label text="Gamcare" styleClass="titleLabel"/>
            </HBox>
            <HBox HBox.hgrow="ALWAYS"/>
            <HBox styleClass="userBox">
                <Button text="My Profile" onAction="#onMyProfileButtonClick"/>
                <Button text="Log Out" onAction="#onLogOutButtonClick"/>
            </HBox>
        </HBox>
    </VBox>
    <VBox styleClass="bodyBox">
        <VBox styleClass="innerBodyBox">
            <HBox styleClass="hospitalsSubHeadingBox">
                <Label text="Hospitals"/>
                <HBox HBox.hgrow="ALWAYS"/>
                <Button text="Add" onAction="#onAddHospitalButtonClick"/>
            </HBox>
            <VBox styleClass="hospitalsBodyBox">
                <HBox>
                    <Button text="Brikama" onAction="#onShowHospitalButtonClick"/>
                    <HBox HBox.hgrow="ALWAYS"/>
                    <Button text="Mansa Konko" onAction="#onShowHospitalButtonClick"/>
                    <HBox HBox.hgrow="ALWAYS"/>
                    <Button text="Farro Kono" onAction="#onShowHospitalButtonClick"/>
                    <HBox HBox.hgrow="ALWAYS"/>
                    <Button text="Katong" onAction="#onShowHospitalButtonClick"/>
                </HBox>
                <HBox>
                    <Button text="Juffureh" onAction="#onShowHospitalButtonClick"/>
                    <HBox HBox.hgrow="ALWAYS"/>
                    <Button text="Niumi" onAction="#onShowHospitalButtonClick"/>
                    <HBox HBox.hgrow="ALWAYS"/>
                    <Button text="Kloro" onAction="#onShowHospitalButtonClick"/>
                    <HBox HBox.hgrow="ALWAYS"/>
                    <Button text="Bansang" onAction="#onShowHospitalButtonClick"/>
                </HBox>
            </VBox>
        </VBox>
    </VBox>
</VBox>

