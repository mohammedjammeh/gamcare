<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<VBox
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.projects.gamcare.controllers.Hospital"
    stylesheets="@../../css/main.css"
>
    <VBox styleClass="headingBox">
        <HBox styleClass="innerHeadingBox">
            <HBox styleClass="titleBox">
                <Label text="Gamcare" styleClass="titleLabel"/>
            </HBox>
            <HBox HBox.hgrow="ALWAYS"/>
            <HBox styleClass="userBox">
                <Button text="Hospitals" onAction="#onHospitalsButtonClick"/>
                <Button text="My Profile" onAction="#onMyProfileButtonClick"/>
                <Button text="Log Out" onAction="#onLogOutButtonClick"/>
            </HBox>
        </HBox>
    </VBox>
    <VBox styleClass="bodyBox">
        <VBox styleClass="innerBodyBox">
            <HBox styleClass="hospitalSubHeadingBox">
                <Label text="Mansa Konko Patients"/>
                <HBox HBox.hgrow="ALWAYS"/>
                <Button text="Add" onAction="#onAddPatientButtonClick"/>
            </HBox>
            <VBox styleClass="hospitalShowBodyBox">
                <VBox styleClass="tableDisplay">
                    <HBox styleClass="tableHeadings">
                        <Label styleClass="shortColumn">First name</Label>
                        <HBox HBox.hgrow="ALWAYS"/>

                        <Label styleClass="shortColumn">Last name</Label>
                        <HBox HBox.hgrow="ALWAYS"/>

                        <Label styleClass="shortColumn">Age</Label>
                        <HBox HBox.hgrow="ALWAYS"/>

                        <Label styleClass="longColumn">Address</Label>
                        <HBox HBox.hgrow="ALWAYS"/>

                        <Label styleClass="shortColumn">Health score</Label>
                        <HBox HBox.hgrow="ALWAYS"/>

                        <Label styleClass="longColumn">Actions</Label>
                    </HBox>
                    <HBox styleClass="tableRows">
                        <Label styleClass="shortColumn">Mohammed</Label>
                        <HBox HBox.hgrow="ALWAYS"/>

                        <Label styleClass="shortColumn">Jammeh</Label>
                        <HBox HBox.hgrow="ALWAYS"/>

                        <Label styleClass="shortColumn">19 years</Label>
                        <HBox HBox.hgrow="ALWAYS"/>

                        <Label styleClass="longColumn">Jammeh Kunda, Brikama</Label>
                        <HBox HBox.hgrow="ALWAYS"/>

                        <Label styleClass="shortColumn">19.0</Label>
                        <HBox HBox.hgrow="ALWAYS"/>

                        <Label styleClass="longColumn">View, Edit</Label>
                    </HBox>
                </VBox>
                <VBox>
                    <Label></Label>
                </VBox>
            </VBox>
        </VBox>
    </VBox>
</VBox>

