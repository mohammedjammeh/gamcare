<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>

<VBox
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.projects.gamcare.controllers.hospital.Show"
    stylesheets="@../../css/main.css"
>
    <ScrollPane styleClass="bodyScrollPane" fitToWidth="true">
        <VBox>
            <VBox styleClass="headingBox" fx:id="headingBox"/>

            <VBox styleClass="bodyBox">
                <VBox styleClass="innerBodyBox">

                    <HBox styleClass="subHeadingBox">
                        <Label text="Main"/>
                        <HBox HBox.hgrow="ALWAYS"/>
                        <Button text="Edit" onAction="#onEditHospitalButtonClick" fx:id="editHospitalButton"/>
                    </HBox>
                    <VBox styleClass="profileAttributes" fx:id="profileAttributes">
                        <VBox.margin>
                            <Insets>
                                <bottom>30</bottom>
                            </Insets>
                        </VBox.margin>
                    </VBox>


                    <HBox styleClass="subHeadingBox">
                        <Label text="Other Details"/>
                        <HBox HBox.hgrow="ALWAYS"/>
                        <Button text="Edit" onAction="#onEditHospitalButtonClick" fx:id="editHospitalDetailsButton"/>
                    </HBox>
                    <VBox styleClass="profileOtherDetails" fx:id="profileOtherDetails">
                        <VBox.margin>
                            <Insets>
                                <bottom>30</bottom>
                            </Insets>
                        </VBox.margin>
                    </VBox>


                    <HBox styleClass="subHeadingBox">
                        <Label text="Patients"/>
                        <HBox HBox.hgrow="ALWAYS"/>
                        <Button text="Add" onAction="#onAddPatientButtonClick" fx:id="addPatientButton"/>
                    </HBox>
                    <VBox styleClass="tableDisplay" fx:id="profilePatients">
                        <HBox styleClass="tableHeadings">
                            <Label>First name</Label>
                            <HBox HBox.hgrow="ALWAYS"/>

                            <Label>Middle name</Label>
                            <HBox HBox.hgrow="ALWAYS"/>

                            <Label>Last name</Label>
                            <HBox HBox.hgrow="ALWAYS"/>

                            <Label>Age</Label>
                            <HBox HBox.hgrow="ALWAYS"/>

                            <Label styleClass="email">Email address</Label>
                            <HBox HBox.hgrow="ALWAYS"/>

                            <Label>Score</Label>
                            <HBox HBox.hgrow="ALWAYS"/>

                            <Label styleClass="action">Action</Label>
                        </HBox>
                        <VBox.margin>
                            <Insets>
                                <bottom>30</bottom>
                            </Insets>
                        </VBox.margin>
                    </VBox>


                    <HBox styleClass="subHeadingBox">
                        <Label text="Doctors"/>
                        <HBox HBox.hgrow="ALWAYS"/>
                        <Button text="Add" onAction="#onAddDoctorButtonClick" fx:id="addDoctorButton"/>
                    </HBox>
                    <VBox styleClass="tableDisplay" fx:id="profileDoctors">
                        <HBox styleClass="tableHeadings">
                            <Label>First name</Label>
                            <HBox HBox.hgrow="ALWAYS"/>

                            <Label>Middle name</Label>
                            <HBox HBox.hgrow="ALWAYS"/>

                            <Label>Last name</Label>
                            <HBox HBox.hgrow="ALWAYS"/>

                            <Label>Age</Label>
                            <HBox HBox.hgrow="ALWAYS"/>

                            <Label styleClass="email">Email address</Label>
                            <HBox HBox.hgrow="ALWAYS"/>

                            <Label>Level</Label>
                            <HBox HBox.hgrow="ALWAYS"/>

                            <Label styleClass="action">Action</Label>
                        </HBox>
                    </VBox>

                </VBox>
            </VBox>
        </VBox>
    </ScrollPane>
</VBox>

