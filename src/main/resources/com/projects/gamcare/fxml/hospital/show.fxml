                        <Label styleClass="score">0.3</Label>
                        <HBox HBox.hgrow="ALWAYS"/>

                        <Label styleClass="address">Badjie Kunda, Kiti Koto</Label>
                        <HBox HBox.hgrow="ALWAYS"/>

                        <HBox styleClass="action">
                            <Button text="View" onAction="#onShowPatientButtonClick"/>
                        </HBox>
                    </HBox>
                    <HBox styleClass="tableRows">
                        <Label>Lamin</Label>
                        <HBox HBox.hgrow="ALWAYS"/>

                        <Label>Sanyang</Label>
