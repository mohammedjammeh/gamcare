                        <Label styleClass="address">Jammeh Kunda, Brikama</Label>
                        <HBox HBox.hgrow="ALWAYS"/>

                        <HBox styleClass="action">
                            <Button text="View" onAction="#onShowPatientButtonClick"/>
                        </HBox>
                    </HBox>
                    <HBox styleClass="tableRows">
                        <Label>Omar</Label>
                        <HBox HBox.hgrow="ALWAYS"/>

                        <Label>Bojang</Label>
