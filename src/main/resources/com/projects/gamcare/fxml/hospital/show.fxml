                        <Label styleClass="score">0.6</Label>
                        <HBox HBox.hgrow="ALWAYS"/>

                        <Label styleClass="address">Bojang Kunda, Bangsang River Road</Label>
                        <HBox HBox.hgrow="ALWAYS"/>

                        <HBox styleClass="action">
                            <Button text="View" onAction="#onShowPatientButtonClick"/>
                        </HBox>
                    </HBox>
                    <HBox styleClass="tableRows">
                        <Label>Mustapha</Label>
                        <HBox HBox.hgrow="ALWAYS"/>

                        <Label>Badjie</Label>
                        <HBox HBox.hgrow="ALWAYS"/>

                        <Label>27 years</Label>
