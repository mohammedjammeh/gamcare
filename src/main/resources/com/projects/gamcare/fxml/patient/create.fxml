<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.projects.gamcare.controllers.Patient"
    stylesheets="@../../css/main.css"
>
    <VBox styleClass="headingBox">
        <HBox styleClass="innerHeadingBox">
            <HBox styleClass="titleBox">
                <Label text="Gamcare - Mansa Konko" styleClass="titleLabel"/>
            </HBox>
            <HBox HBox.hgrow="ALWAYS"/>
            <HBox styleClass="userBox">
                <Button text="Hospitals" onAction="#onHospitalsButtonClick"/>
                <Button text="My Profile" onAction="#onMyProfileButtonClick"/>
                <Button text="Log Out" onAction="#onLogOutButtonClick"/>
            </HBox>
        </HBox>
    </VBox>
    <VBox styleClass="bodyBox">
        <VBox styleClass="innerBodyBox">
            <HBox styleClass="subHeadingBox">
                <Label text="New Patient"/>
            </HBox>

            <VBox styleClass="createPatientBodyBox">
                <VBox>
                    <HBox>
                        <VBox styleClass="firstNameBox">
                            <Label fx:id="firstNameFieldLabel" text="First name"/>
                            <TextField fx:id="firstNameTextField" promptText="First name"/>
                        </VBox>

                        <HBox HBox.hgrow="ALWAYS"/>

                        <VBox styleClass="lastNameBox">
                            <Label fx:id="lastNameFieldLabel" text="Last name"/>
                            <TextField fx:id="lastNameTextField" promptText="Last name"/>
                        </VBox>
                    </HBox>

                    <HBox>
                        <VBox styleClass="emailBox">
                            <Label fx:id="emailFieldLabel" text="Email"/>
                            <TextField fx:id="emailTextField" promptText="Email"/>
                        </VBox>

                        <HBox HBox.hgrow="ALWAYS"/>

                        <VBox styleClass="dateOfBirthBox">
                            <Label fx:id="dateOfBirthFieldLabel" text="Date of birth"/>
                            <DatePicker fx:id="dateOfBirthPicker" promptText="Date of birth"/>
                        </VBox>
                    </HBox>

                    <HBox>
                        <VBox styleClass="compoundNameBox">
                            <Label fx:id="compoundNameFieldLabel" text="Compound name"/>
                            <TextField fx:id="compoundNameTextField" promptText="Compound name"/>
                        </VBox>

                        <HBox HBox.hgrow="ALWAYS"/>

                        <VBox styleClass="townBox">
                            <Label fx:id="townFieldLabel" text="Town"/>
                            <TextField fx:id="townTextField" promptText="Town"/>
                        </VBox>
                    </HBox>

                    <HBox>
                        <VBox styleClass="regionBox">
                            <Label fx:id="regionFieldLabel" text="Region"/>
                            <ChoiceBox value="Central River Region">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Western Region" />
                                        <String fx:value="North Bank Region" />
                                        <String fx:value="Lower River Region" />
                                        <String fx:value="Central River Region" />
                                        <String fx:value="Upper River Region" />
                                    </FXCollections>
                                </items>
                            </ChoiceBox>
                        </VBox>
                    </HBox>

                    <HBox>
                        <VBox styleClass="addressDescriptionBox">
                            <Label fx:id="addressDescriptionFieldLabel" text="Address description"/>
                            <TextArea fx:id="addressDescriptionTextArea" promptText="Address description"/>
                        </VBox>
                    </HBox>

                    <HBox>
                        <Button text="Create Patient" onAction="#onCreatePatientButtonClick"/>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </VBox>
</VBox>

