<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.projects.gamcare.controllers.Patient"
    stylesheets="@../../css/main.css"
>
    <VBox styleClass="headingBox">
        <HBox styleClass="innerHeadingBox">
            <HBox styleClass="titleBox">
                <Label text="Gamcare - Mansa Konko" styleClass="titleLabel"/>
            </HBox>
            <HBox HBox.hgrow="ALWAYS"/>
            <HBox styleClass="userBox">
                <Button text="Hospitals" onAction="#onHospitalsButtonClick"/>
                <Button text="My Profile" onAction="#onMyProfileButtonClick"/>
                <Button text="Log Out" onAction="#onLogOutButtonClick"/>
            </HBox>
        </HBox>
    </VBox>
    <VBox styleClass="bodyBox">
        <VBox styleClass="innerBodyBox">
            <HBox styleClass="subHeadingBox">
                <Label text="Create Patient"/>
                <HBox HBox.hgrow="ALWAYS"/>
            </HBox>

            <VBox styleClass="createPatientBodyBox">
                <HBox>
                    <VBox styleClass="firstNameBox">
                        <Label fx:id="firstNameFieldLabel" text="First name"/>
                        <TextField fx:id="firstNameTextField" promptText="First name" styleClass="firstNameTextField"/>
                    </VBox>

                    <VBox styleClass="lastNameBox">
                        <Label fx:id="lastNameFieldLabel" text="Last name"/>
                        <TextField fx:id="lastNameTextField" promptText="Last name" styleClass="lastNameTextField"/>
                    </VBox>

                    <VBox styleClass="emailBox">
                        <Label fx:id="emailFieldLabel" text="Email"/>
                        <TextField fx:id="emailTextField" promptText="Email" styleClass="emailTextField"/>
                    </VBox>

                    <VBox styleClass="dateOfBirth">
                        <Label fx:id="dateOfBirthFieldLabel" text="Date of Birth"/>
                        <DatePicker fx:id="dateOfBirthPicker" promptText="Date of Birth" styleClass="dateOfBirthTextField"/>
                    </VBox>
                </HBox>

                <HBox>
                    <VBox styleClass="compoundNameBox">
                        <Label fx:id="compoundNameFieldLabel" text="Compound name"/>
                        <TextField fx:id="compoundNameTextField" promptText="Compound name" styleClass="compoundNameTextField"/>
                    </VBox>

                    <VBox styleClass="townBox">
                        <Label fx:id="townFieldLabel" text="Town"/>
                        <TextField fx:id="townTextField" promptText="Town" styleClass="townTextField"/>
                    </VBox>

                    <VBox styleClass="regionBox">
                        <Label fx:id="regionFieldLabel" text="Region"/>
                        <ChoiceBox value="2 minutes">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="2 minutes" />
                                    <String fx:value="5 minutes" />
                                    <String fx:value="15 minutes" />
                                </FXCollections>
                            </items>
                        </ChoiceBox>
                    </VBox>

                    <VBox styleClass="addressDescriptionBox">
                        <Label fx:id="addressDescriptionFieldLabel" text="Address Description"/>
                        <TextArea fx:id="addressDescriptionTextArea" promptText="Address Description" styleClass="addressDescriptionTextArea"/>
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </VBox>
</VBox>

