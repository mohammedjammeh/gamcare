    fx:controller="com.projects.gamcare.controllers.models.user.patient.show.Actions"
    styleClass="profileIncludeBox"
>
    <HBox styleClass="subHeadingBox">
        <Label text="Actions"/>
        <HBox HBox.hgrow="ALWAYS"/>
    </HBox>

    <VBox styleClass="profileAction">
