<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.ChoiceBox?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>

<?import javafx.scene.control.DatePicker?>
<?import javafx.geometry.Insets?>

<VBox
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.projects.gamcare.controllers.patient.sections.show.Exercises"
    styleClass="profileIncludeBox"
>
    <HBox styleClass="subHeadingBox">
        <Label text="Exercises"/>
        <HBox HBox.hgrow="ALWAYS"/>
    </HBox>

    <VBox styleClass="profileExercises">
        <HBox styleClass="profileForm">
            <HBox styleClass="exerciseTypeBox">
                <Label fx:id="exerciseTypeFieldLabel" text="Type"/>
                <HBox HBox.hgrow="ALWAYS"/>
                <ChoiceBox value="Calisthenics">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Calisthenics"/>
                            <String fx:value="Weight Lifting"/>
                            <String fx:value="Running"/>
                        </FXCollections>
                    </items>
                </ChoiceBox>
            </HBox>

            <HBox HBox.hgrow="ALWAYS"/>

            <HBox styleClass="exerciseSpanBox">
                <Label fx:id="exerciseSpanFieldLabel" text="Span"/>
                <HBox HBox.hgrow="ALWAYS"/>
                <ChoiceBox value="15 minutes">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="15 minutes"/>
                            <String fx:value="30 minutes"/>
                            <String fx:value="45 minutes"/>
                            <String fx:value="1 hour"/>
                        </FXCollections>
                    </items>
                </ChoiceBox>
            </HBox>

            <HBox HBox.hgrow="ALWAYS"/>

            <HBox styleClass="exerciseDateBox">
                <Label fx:id="exerciseDateFieldLabel" text="Date"/>
                <HBox HBox.hgrow="ALWAYS"/>
                <DatePicker fx:id="exerciseDatePicker" promptText="Format 28/06/2021"/>
            </HBox>

            <HBox HBox.hgrow="ALWAYS"/>

            <HBox styleClass="exerciseButtonBox">
                <Button text="Add" onAction="#onAddExerciseButtonClick"/>
            </HBox>
        </HBox>

        <VBox styleClass="profileCalendar">
            <HBox styleClass="weekBox">
                <HBox styleClass="title">
                    <Label>Training Sessions</Label>
                </HBox>
                <HBox HBox.hgrow="ALWAYS"/>
                <HBox styleClass="month">
                    <Label>December 2021</Label>
                </HBox>
                <HBox HBox.hgrow="ALWAYS"/>
                <HBox styleClass="buttons">
                    <Button text="Prev" onAction="#onPreviousExerciseWeekButtonClick"/>
                    <HBox HBox.hgrow="ALWAYS"/>
                    <Button text="Next" onAction="#onNextExerciseWeekButtonClick"/>
                </HBox>
            </HBox>
            <HBox>
                <HBox styleClass="dateBox">
                    <Label>Mon 11th</Label>
                </HBox>
                <HBox HBox.hgrow="ALWAYS"/>

                <HBox styleClass="dateBox">
                    <Label>Tue 12th</Label>
                </HBox>
                <HBox HBox.hgrow="ALWAYS"/>

                <HBox styleClass="dateBox">
                    <Label>Wed 13th</Label>
                </HBox>
                <HBox HBox.hgrow="ALWAYS"/>

                <HBox styleClass="dateBox">
                    <Label>Thur 14th</Label>
                </HBox>
                <HBox HBox.hgrow="ALWAYS"/>

                <HBox styleClass="dateBox">
                    <Label>Fri 15th</Label>
                </HBox>
                <HBox HBox.hgrow="ALWAYS"/>

                <HBox styleClass="dateBox">
                    <Label>Sat 16th</Label>
                </HBox>
                <HBox HBox.hgrow="ALWAYS"/>

                <HBox styleClass="dateBox">
                    <Label>Sat 17th</Label>
                </HBox>
            </HBox>
            <HBox>
                <VBox styleClass="historyBox">
                    <VBox>
                        <Label>Calisthenics</Label>
                    </VBox>
                    <VBox>
                        <Label>15 minutes</Label>
                    </VBox>
                </VBox>
                <HBox HBox.hgrow="ALWAYS"/>

                <VBox styleClass="historyBox">
                    <VBox>
                        <Label>Calisthenics</Label>
                    </VBox>
                    <VBox>
                        <Label>15 minutes</Label>
                    </VBox>
                </VBox>
                <HBox HBox.hgrow="ALWAYS"/>

                <VBox styleClass="historyBox">
                    <VBox>
                        <Label>Calisthenics</Label>
                    </VBox>
                    <VBox>
                        <Label>15 minutes</Label>
                    </VBox>
                </VBox>
                <HBox HBox.hgrow="ALWAYS"/>

                <VBox styleClass="historyBox">
                    <VBox>
                        <Label>Calisthenics</Label>
                    </VBox>
                    <VBox>
                        <Label>15 minutes</Label>
                    </VBox>
                </VBox>
                <HBox HBox.hgrow="ALWAYS"/>

                <VBox styleClass="historyBox">
                    <VBox>
                        <Label>Calisthenics</Label>
                    </VBox>
                    <VBox>
                        <Label>15 minutes</Label>
                    </VBox>
                </VBox>
                <HBox HBox.hgrow="ALWAYS"/>

                <VBox styleClass="historyBox">
                    <VBox>
                        <Label>Calisthenics</Label>
                    </VBox>
                    <VBox>
                        <Label>15 minutes</Label>
                    </VBox>
                </VBox>
                <HBox HBox.hgrow="ALWAYS"/>

                <VBox styleClass="historyBox">
                    <VBox>
                        <Label>Calisthenics</Label>
                    </VBox>
                    <VBox>
                        <Label>15 minutes</Label>
                    </VBox>
                </VBox>
            </HBox>
        </VBox>

        <VBox.margin>
            <Insets>
                <bottom>30</bottom>
            </Insets>
        </VBox.margin>
    </VBox>
</VBox>
