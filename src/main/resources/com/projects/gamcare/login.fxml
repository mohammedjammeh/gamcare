<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.projects.gamcare.controllers.Login"
    stylesheets="@css/main.css"
>
    <VBox styleClass="body">

        <VBox styleClass="titleBox">
            <Label fx:id="title" text="Gamcare" styleClass="titleLabel"/>
        </VBox>

        <VBox styleClass="usernameBox">
            <Label fx:id="usernameLabel" text="Username"/>
            <TextField fx:id="usernameText" promptText="Username" styleClass="usernameField"/>
        </VBox>

        <VBox styleClass="passwordBox">
            <Label fx:id="passwordLabel" text="Password"/>
            <TextField fx:id="passwordText" promptText="Password" styleClass="passwordField"/>
        </VBox>

        <VBox styleClass="logInButtonBox">
            <Button text="Log In" onAction="#onLoginButtonClick" styleClass="logInButton"/>
        </VBox>

    </VBox>
</VBox>

