<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.ScrollPane?>

<VBox
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.projects.gamcare.controllers.hospital.Create"
    stylesheets="@../../css/main.css"
>
    <ScrollPane styleClass="outerBodyBox" fitToWidth="true">
        <VBox>
            <fx:include source="../header.fxml"/>

            <VBox styleClass="bodyBox">
                <VBox styleClass="innerBodyBox">
                    <HBox styleClass="subHeadingBox">
                        <Label text="Create New Hospital"/>
                    </HBox>

                    <VBox styleClass="createHospitalBodyBox">
                        <VBox styleClass="form">
                            <VBox fx:id="errorBox" styleClass="errorBox">
                                <Label fx:id="errorLabel" text="Sorry, there is an error." styleClass="errorLabel"/>
                            </VBox>

                            <HBox>
                                <VBox styleClass="nameBox">
                                    <Label fx:id="nameFieldLabel" text="Name"/>
                                    <TextField fx:id="nameTextField" promptText="Name"/>
                                </VBox>

                                <HBox HBox.hgrow="ALWAYS"/>

                                <VBox styleClass="sizeBox">
                                    <Label fx:id="sizeFieldLabel" text="Size"/>
                                    <ChoiceBox value="Large">
                                        <items>
                                            <FXCollections fx:factory="observableArrayList">
                                                <String fx:value="Small" />
                                                <String fx:value="Medium" />
                                                <String fx:value="Large" />
                                            </FXCollections>
                                        </items>
                                    </ChoiceBox>
                                </VBox>

                                <HBox HBox.hgrow="ALWAYS"/>

                                <VBox styleClass="leadDoctorBox">
                                    <Label fx:id="leadDoctorFieldLabel" text="Lead Doctor"/>
                                    <ChoiceBox value="Buba Barry">
                                        <items>
                                            <FXCollections fx:factory="observableArrayList">
                                                <String fx:value="Ousman Jallow" />
                                                <String fx:value="Buba Barry" />
                                                <String fx:value="Momodou Jallow" />
                                            </FXCollections>
                                        </items>
                                    </ChoiceBox>
                                </VBox>
                            </HBox>

                            <HBox>
                                <VBox styleClass="emailBox">
                                    <Label fx:id="emailFieldLabel" text="Email"/>
                                    <TextField fx:id="emailTextField" promptText="Email"/>
                                </VBox>

                                <HBox HBox.hgrow="ALWAYS"/>

                                <VBox styleClass="phoneNumberBox">
                                    <Label fx:id="phoneNumberFieldLabel" text="Phone number"/>
                                    <TextField fx:id="phoneNumberTextField" promptText="Phone number"/>
                                </VBox>

                                <HBox HBox.hgrow="ALWAYS"/>

                                <VBox styleClass="relevantLinkBox">
                                    <Label fx:id="relevantLinkFieldLabel" text="Relevant link"/>
                                    <TextField fx:id="relevantLinkTextField" promptText="Relevant link"/>
                                </VBox>
                            </HBox>

                            <HBox>
                                <VBox styleClass="compoundNameBox">
                                    <Label fx:id="compoundNameFieldLabel" text="Compound name"/>
                                    <TextField fx:id="compoundNameTextField" promptText="Compound name"/>
                                </VBox>

                                <HBox HBox.hgrow="ALWAYS"/>

                                <VBox styleClass="townBox">
                                    <Label fx:id="townFieldLabel" text="Town"/>
                                    <TextField fx:id="townTextField" promptText="Town"/>
                                </VBox>

                                <HBox HBox.hgrow="ALWAYS"/>

                                <VBox styleClass="regionBox">
                                    <Label fx:id="regionFieldLabel" text="Region"/>
                                    <ChoiceBox value="Western Region">
                                        <items>
                                            <FXCollections fx:factory="observableArrayList">
                                                <String fx:value="Western Region" />
                                                <String fx:value="North Bank Region" />
                                                <String fx:value="Lower River Region" />
                                                <String fx:value="Central River Region" />
                                                <String fx:value="Upper River Region" />
                                            </FXCollections>
                                        </items>
                                    </ChoiceBox>
                                </VBox>
                            </HBox>

                            <HBox>
                                <VBox styleClass="otherDetailsBox">
                                    <Label fx:id="otherDetailsFieldLabel" text="Other details"/>
                                    <TextArea fx:id="otherDetailsTextArea" promptText="Other details"/>
                                </VBox>
                            </HBox>

                            <VBox styleClass="buttonBox">
                                <Button text="Create Hospital" onAction="#onCreateHospitalButtonClick"/>
                            </VBox>
                        </VBox>
                    </VBox>
                </VBox>
            </VBox>
        </VBox>
    </ScrollPane>
</VBox>

