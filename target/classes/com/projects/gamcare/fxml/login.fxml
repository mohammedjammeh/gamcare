<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.projects.gamcare.controllers.Login"
    stylesheets="@../css/login.css"
>
    <VBox styleClass="body">
        <VBox styleClass="mainTitleBox">
            <Label text="Gamcare" styleClass="titleLabel"/>
        </VBox>

        <VBox styleClass="errorBox" fx:id="errorBox">
            <Label fx:id="errorLabel" text="Sorry, authentication unsuccessful." styleClass="errorLabel"/>
        </VBox>

        <VBox styleClass="emailBox">
            <Label fx:id="emailFieldLabel" text="Email"/>
            <TextField fx:id="emailTextField" promptText="Email" styleClass="emailTextField"/>
        </VBox>

        <VBox styleClass="passwordBox">
            <Label fx:id="passwordFieldLabel" text="Password"/>
            <TextField fx:id="passwordTextField" promptText="Password" styleClass="passwordTextField"/>
        </VBox>

        <VBox styleClass="logInButtonBox">
            <Button text="Log In" onAction="#onLogInButtonClick" styleClass="logInButton"/>
        </VBox>
    </VBox>
</VBox>

