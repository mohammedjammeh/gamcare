<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.projects.gamcare.controllers.Login"
    stylesheets="@../css/login.css"
>
    <VBox styleClass="body">
        <VBox styleClass="mainTitleBox">
            <Label text="Gamcare"/>
        </VBox>

        <VBox styleClass="errorBox" fx:id="errorBox">
            <Label text="Sorry, authentication unsuccessful."/>
        </VBox>

        <VBox styleClass="emailBox">
            <Label text="Email"/>
            <TextField fx:id="emailAddressTextField" promptText="Email"/>
        </VBox>

        <VBox styleClass="passwordBox">
            <Label text="Password"/>
            <TextField fx:id="passwordTextField" promptText="Password"/>
        </VBox>

        <VBox styleClass="logInButtonBox">
            <Button text="Log In" onAction="#onLogInButtonClick"/>
        </VBox>
    </VBox>
</VBox>

