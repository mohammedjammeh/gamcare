<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.ScrollPane?>

<VBox
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.projects.gamcare.controllers.patient.Create"
    stylesheets="@../../css/main.css"
>
    <ScrollPane styleClass="outerBodyBox" fitToWidth="true">
        <VBox>
            <fx:include source="../header.fxml"/>

            <VBox styleClass="bodyBox">
                <VBox styleClass="innerBodyBox">
                    <HBox styleClass="subHeadingBox">
                        <Label text="Create New Patient"/>
                    </HBox>

                    <VBox styleClass="form">
                        <VBox fx:id="errorBox" styleClass="errorBox">
                            <Label text="Sorry, there is an error."/>
                        </VBox>

                        <HBox>
                            <VBox styleClass="firstNameBox">
                                <Label text="First name"/>
                                <TextField promptText="First name" fx:id="firstNameTextField"/>
                            </VBox>

                            <HBox HBox.hgrow="ALWAYS"/>

                            <VBox styleClass="middleNameBox">
                                <Label text="Middle name"/>
                                <TextField promptText="Middle name" fx:id="middleNameTextField"/>
                            </VBox>

                            <HBox HBox.hgrow="ALWAYS"/>

                            <VBox styleClass="lastNameBox">
                                <Label text="Last name"/>
                                <TextField promptText="Last name" fx:id="lastNameTextField"/>
                            </VBox>
                        </HBox>

                        <HBox>
                            <VBox styleClass="titleBox">
                                <Label text="Title"/>
                                <ChoiceBox value="Mr." fx:id="titleChoiceBox">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Mr." />
                                            <String fx:value="Mrs." />
                                            <String fx:value="Miss" />
                                        </FXCollections>
                                    </items>
                                </ChoiceBox>
                            </VBox>

                            <HBox HBox.hgrow="ALWAYS"/>

                            <VBox styleClass="genderBox">
                                <Label text="Gender"/>
                                <ChoiceBox value="Male" fx:id="genderChoiceBox">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Male" />
                                            <String fx:value="Female" />
                                        </FXCollections>
                                    </items>
                                </ChoiceBox>
                            </VBox>

                            <HBox HBox.hgrow="ALWAYS"/>

                            <VBox styleClass="tribeBox">
                                <Label text="Tribe"/>
                                <ChoiceBox value="Mandinka" fx:id="tribeChoiceBox">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Mandinka" />
                                            <String fx:value="Jola" />
                                            <String fx:value="Fula" />
                                            <String fx:value="Wollof" />
                                            <String fx:value="Serer" />
                                            <String fx:value="Manjago" />
                                        </FXCollections>
                                    </items>
                                </ChoiceBox>
                            </VBox>
                        </HBox>

                        <HBox>
                            <VBox styleClass="currentHospitalBox">
                                <Label text="Current hospital"/>
                                <ChoiceBox value="Mansa Konko" fx:id="currentHospitalChoiceBox">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Mansa Konko" />
                                            <String fx:value="Bansang" />
                                        </FXCollections>
                                    </items>
                                </ChoiceBox>
                            </VBox>

                            <HBox HBox.hgrow="ALWAYS"/>

                            <VBox styleClass="placeOfBirthBox">
                                <Label text="Place of birth"/>
                                <TextField fx:id="placeOfBirthTextField" promptText="Place of birth"/>
                            </VBox>

                            <HBox HBox.hgrow="ALWAYS"/>

                            <VBox styleClass="dateOfBirthBox">
                                <Label text="Date of birth"/>
                                <DatePicker fx:id="dateOfBirthPicker" promptText="Date of birth"/>
                            </VBox>
                        </HBox>

                        <HBox>
                            <VBox styleClass="weightBox">
                                <Label text="Weight"/>
                                <TextField fx:id="weightTextField" promptText="Weight"/>
                            </VBox>

                            <HBox HBox.hgrow="ALWAYS"/>

                            <VBox styleClass="heightBox">
                                <Label text="Height"/>
                                <TextField fx:id="heightTextField" promptText="Height"/>
                            </VBox>

                            <HBox HBox.hgrow="ALWAYS"/>

                            <VBox styleClass="bloodTypeBox">
                                <Label text="Blood Type"/>
                                <ChoiceBox value="AB" fx:id="bloodTypeChoiceBox">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="A" />
                                            <String fx:value="B" />
                                            <String fx:value="AB" />
                                            <String fx:value="0" />
                                        </FXCollections>
                                    </items>
                                </ChoiceBox>
                            </VBox>
                        </HBox>

                        <HBox>
                            <VBox styleClass="emailAddressBox">
                                <Label text="Email address"/>
                                <TextField promptText="Email address" fx:id="emailAddressTextField"/>
                            </VBox>

                            <HBox HBox.hgrow="ALWAYS"/>

                            <VBox styleClass="phoneNumberBox">
                                <Label text="Phone number"/>
                                <TextField promptText="Phone number" fx:id="phoneNumberTextField"/>
                            </VBox>

                            <HBox HBox.hgrow="ALWAYS"/>

                            <VBox styleClass="relevantLinkBox">
                                <Label text="Relevant link"/>
                                <TextField promptText="Relevant link" fx:id="relevantLinkTextField"/>
                            </VBox>
                        </HBox>

                        <HBox>
                            <VBox styleClass="compoundNameBox">
                                <Label text="Compound name"/>
                                <TextField promptText="Compound name" fx:id="compoundNameTextField"/>
                            </VBox>

                            <HBox HBox.hgrow="ALWAYS"/>

                            <VBox styleClass="townBox">
                                <Label text="Town"/>
                                <TextField promptText="Town" fx:id="townTextField"/>
                            </VBox>

                            <HBox HBox.hgrow="ALWAYS"/>

                            <VBox styleClass="regionBox">
                                <Label text="Region"/>
                                <ChoiceBox value="Western Region" fx:id="regionChoiceBox">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Western Region" />
                                            <String fx:value="North Bank Region" />
                                            <String fx:value="Lower River Region" />
                                            <String fx:value="Central River Region" />
                                            <String fx:value="Upper River Region" />
                                        </FXCollections>
                                    </items>
                                </ChoiceBox>
                            </VBox>
                        </HBox>

                        <HBox>
                            <VBox styleClass="otherDetailsBox">
                                <Label text="Other details"/>
                                <TextArea promptText="Other details" fx:id="otherDetailsTextArea"/>
                            </VBox>
                        </HBox>

                        <VBox styleClass="buttonBox">
                            <Button text="Create Patient" onAction="#onCreatePatientButtonClick"/>
                        </VBox>
                    </VBox>
                </VBox>
            </VBox>
        </VBox>
    </ScrollPane>
</VBox>

